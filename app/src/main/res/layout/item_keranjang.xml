<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keranjang_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pad_sm"
    app:cardCornerRadius="@dimen/pad_md"
    android:elevation="@dimen/pad_sm">

    <LinearLayout
        android:id="@+id/krj_container_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/pad_md">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/keranjang_gambar_produk"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user"
                android:scaleType="centerCrop"
                android:contentDescription="Ini adalah gambar produknya" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/keranjang_nama_produk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/pad_md"
                    android:layout_marginEnd="@dimen/pad_md"
                    android:layout_marginBottom="@dimen/pad_sm"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:text="Judul Produk"
                    android:textColor="@color/main_text"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/keranjang_harga_produk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/pad_md"
                    android:layout_marginEnd="@dimen/pad_md"
                    android:layout_marginBottom="@dimen/pad_sm"
                    android:ellipsize="marquee"
                    android:lines="1"
                    android:text="Rp400.000"
                    android:textColor="@color/submain_text"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/keranjang_jumlah_produk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/pad_md"
                    android:layout_marginEnd="@dimen/pad_md"
                    android:layout_marginBottom="@dimen/pad_sm"
                    android:ellipsize="marquee"
                    android:lines="1"
                    android:text="1x"
                    android:textColor="@color/submain_text"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>